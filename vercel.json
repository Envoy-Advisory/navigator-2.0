
{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/prisma/**",
          "server/src/**",
          "server/package.json",
          "server/tsconfig.json"
        ]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/src/index.ts": {
      "maxDuration": 30
    }
  },
  "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
  "buildCommand": "cd client && npm run build && cd ../server && npm run build"
}
